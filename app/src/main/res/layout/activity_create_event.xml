<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Event"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />

        <!-- Event Name -->
        <EditText
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Event Description -->
        <EditText
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Description"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Event Category (Dropdown) -->
        <Spinner
            android:id="@+id/eventCategory"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="24dp" />

        <!-- Time & Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time and Date"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Time Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnToday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Today"
                android:backgroundTint="@color/black"
                />

            <Button
                android:id="@+id/btnTomorrow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tomorrow"
                android:backgroundTint="@color/black" />

            <Button
                android:id="@+id/btnThisWeek"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="This week"
                android:backgroundTint="@color/black"/>
        </LinearLayout>

        <!-- Calendar Picker -->
        <Button
            android:id="@+id/btnPickDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose from calendar"
            android:drawableLeft="@drawable/ic_calendar"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 Westville Road, KZN"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Dietary Specifications -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dietary Specifications (optional):"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/diet1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Requirement 1"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/diet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Requirement 2"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Music Poll Checkbox -->
        <CheckBox
            android:id="@+id/musicPollCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Music Suggestion Polls"
            android:layout_marginBottom="16dp"/>

        <!-- Google Drive Link -->
        <EditText
            android:id="@+id/googleDriveLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insert Google Drive Link"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/createEventBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE EVENT"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/black"
            android:textAllCaps="true"
            android:layout_marginBottom="16dp" />

        <!-- Invite Friends Button -->
        <Button
            android:id="@+id/inviteFriendsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INVITE FRIENDS"
            android:backgroundTint="@color/gold"
            android:textAllCaps="true"
            android:drawableRight="@drawable/ic_arrow_right"
            android:layout_marginBottom="16dp" />

        <!-- Share Event Link Button -->
        <Button
            android:id="@+id/shareEventLinkBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHARE EVENT LINK"
            android:backgroundTint="@color/gold"
            android:textAllCaps="true"
            android:drawableRight="@drawable/ic_arrow_right" />
    </LinearLayout>
</ScrollView>
