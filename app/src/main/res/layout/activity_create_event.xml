<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_white_bg"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_arrow_back" />
        </LinearLayout>

        <!-- Event Name -->
        <EditText
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_name_hint"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Event Description -->
        <EditText
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_event_description"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Event Category -->
        <Spinner
            android:id="@+id/eventCategory"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="24dp" />

        <!-- Date Picker -->
        <Button
            android:id="@+id/btnPickDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pick_date"
            android:drawableStart="@drawable/ic_calendar"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Time Picker -->
        <Button
            android:id="@+id/btnPickTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pick_time"
            android:drawableStart="@drawable/ic_time"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location_label"
            android:drawableStart="@drawable/ic_location"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/eventLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_location"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Dietary Specifications -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dietary_requirements"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/diet1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/requirement_1"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/diet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/requirement_2"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Music Poll -->
        <CheckBox
            android:id="@+id/musicPollCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music_suggestions"
            android:layout_marginBottom="16dp" />

        <!-- Google Drive Link -->
        <EditText
            android:id="@+id/googleDriveLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/insert_google_drive_link"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Create Button -->
        <Button
            android:id="@+id/btnCreateEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_event"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textAllCaps="true"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>